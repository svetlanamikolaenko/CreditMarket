@model CreditMarket.ViewModels.OrderFormViewModel
@{
    /**/

    ViewBag.Title = "Редагування заявки";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Редагування заявки</h2>
<link href="https://ajax.aspnetcdn.com/ajax/jquery.ui/1.10.4/themes/redmond/jquery-ui.css" rel="stylesheet" />
@section scripts
{
    <script src="~/Scripts/jquery-3.3.1.min.js"></script>
    <script src="~/Scripts/jquery-ui-1.12.1.js"></script>

    <script type="text/javascript">

        $(function () {
            $('.datepicker1').datepicker({
                dateFormat: 'dd-mm-yy',
                maxDate: "-18y",
                minDate: "-75y"
            });
        });
    </script>
    <script type="text/javascript">

        $(function () {
            $('.datepicker2').datepicker({
                dateFormat: 'dd-mm-yy',
                maxDate: "-1d",
                minDate: "-30y"
            });
        });
    </script>
}
@using (Html.BeginForm("Edit", "Orders", FormMethod.Post, new { enctype = "multipart/form-data" }))
{


    <div class="row">
        <div class="col-md-5 form-content-center">
            @Html.ValidationSummary(true, "Усі поля обов'язкові.", new { @class = "text-danger" })
            <div class="form-group row">
                <label for="Amount" class="col-md-4">Сума кредиту</label>
                <div class="col-md-8">
                    @Html.TextBoxFor(x => x.Order.Amount, new { @class = "form-control", autofocus = "autofocus" })
                    @Html.ValidationMessageFor(x => x.Order.Amount)
                </div>

            </div>
            <div class="form-group row">
                <label for="Order.LoanId" class="col-md-4">Кредит</label>
                <div class="col-md-8">
                    @Html.DropDownListFor(x => x.Order.LoanId, new SelectList(Model.Loan, "Id", "Name"), "Оберіть кредит", new { @class = "form-control", placeholder = "Оберіть період" })
                    @Html.ValidationMessageFor(x => x.Order.LoanId)
                </div>

            </div>
            <div class="form-group row">
                <label for="LastName" class="col-md-4">Прізвище</label>
                <div class="col-md-8">
                    @Html.TextBoxFor(x => x.Order.LastName, new { @class = "form-control", placeholder = "Прізвище" })
                    @Html.ValidationMessageFor(x => x.Order.LastName)
                </div>
            </div>
            <div class="form-group row">
                <label for="FirstName" class="col-md-4">Ім'я</label>
                <div class="col-md-8">
                    @Html.TextBoxFor(x => x.Order.FirstName, new { @class = "form-control", placeholder = "Ім'я" })
                    @Html.ValidationMessageFor(x => x.Order.FirstName)
                </div>
            </div>
            <div class="form-group row">
                <label for="FathersName" class="col-md-4">По-батькові</label>
                <div class="col-md-8">
                    @Html.TextBoxFor(x => x.Order.FathersName, new { @class = "form-control", placeholder = "По-батькові" })
                    @Html.ValidationMessageFor(x => x.Order.FathersName)
                </div>
            </div>

            <div class="form-group row">
                <label for="DateOfBirth" class="col-md-4">День народження</label>
                <div class="col-md-8">
                    @Html.TextBoxFor(x => x.Order.DateOfBirth, "{0:dd-MM-yyyy}", new { @class = "form-control datepicker1", placeholder = "Введіть дату народження" })
                    @Html.ValidationMessageFor(x => x.Order.DateOfBirth)
                </div>
            </div>

            <div class="form-group row">

                <label for="Email" class="col-md-4">E-mail</label>
                <div class="col-md-8">
                    @Html.TextBoxFor(x => x.Order.Email, new { @class = "form-control" })
                    @Html.ValidationMessageFor(x => x.Order.Email)
                </div>
            </div>

            <div class="form-group row">
                <label for="PhoneNumber" class="col-md-4">Мобільний номер</label>
                <div class="col-md-8">
                    @Html.TextBoxFor(x => x.Order.PhoneNumber, new { @class = "form-control" })
                    @Html.ValidationMessageFor(x => x.Order.PhoneNumber)
                </div>
            </div>

            <div class="form-group row">

                <label for="INN" class="col-md-4">ІНН</label>
                <div class="col-md-8">
                    @Html.TextBoxFor(x => x.Order.INN, new { @class = "form-control" })
                    @Html.ValidationMessageFor(x => x.Order.INN)
                </div>
            </div>

            <div class="form-group row">
                <label for="INN" class="col-md-4">Номер картки</label>
                <div class="col-md-8">
                    @Html.TextBoxFor(x => x.Order.CardNumber, new { @class = "form-control" })
                    @Html.ValidationMessageFor(x => x.Order.CardNumber)
                </div>
            </div>

            <div class="form-group row">

                <label for="PassportNumber" class="col-md-4">Серія та номер паспорта</label>
                <div class="col-md-8">
                    @Html.TextBoxFor(x => x.Order.PassportNumber, new { @class = "form-control" })
                    @Html.ValidationMessageFor(x => x.Order.PassportNumber)
                </div>
            </div>

            <div class="form-group row">

                <label for="PassportGivenByWhom" class="col-md-4">Ким виданий паспорт</label>
                <div class="col-md-8">
                    @Html.TextBoxFor(x => x.Order.PassportGivenByWhom, new { @class = "form-control" })
                    @Html.ValidationMessageFor(x => x.Order.PassportGivenByWhom)
                </div>
            </div>

            <div class="form-group row">
                <label for="PassportGivenDate" class="col-md-4">Коли виданий паспорт</label>
                <div class="col-md-8">
                    @Html.TextBoxFor(x => x.Order.PassportGivenDate, "{0:dd-MM-yyyy}", new { @class = "form-control datepicker2", placeholder = "Введіть дату видачі паспорту" })
                    @Html.ValidationMessageFor(x => x.Order.PassportGivenDate)
                </div>
            </div>
            <div>
                @if (Model.Order.PassportImages == null)
                {
                    <div class="form-group row">
                        <label class="editor-label">Фото паспорта: </label>
                        <div class="form-control-static"> Відсутнє фото </div>
                        <label class="editor-label1">Завантажити фото паспорта: </label>
                        <div class="editor-field">
                            <input type="file" name="uploadPassportImage" />
                        </div>
                    </div>
                }
                else
                {
                    <div class="form-group row align-center">
                        <div class="editor-label">Фото паспорта: </div>
                        @Html.Raw("<img style='width:250px; height:125px;' src=\"data:image/jpeg;base64,"
                                             + Convert.ToBase64String(Model.Order.PassportImages) + "\" />")
                        @Html.Hidden("PassportImages", Model.Order.PassportImages)
                        <div class="editor-label">Змінити фото Паспорта: </div>
                        <div class="editor-field">
                            <input type="file" name="uploadPassportImage" />
                        </div>
                    </div>
                }
            </div>

            <br>

            <div>
                @if (Model.Order.INNImages == null)
                {
                    <div class="form-group row">
                        <label class="editor-label">Фото ідентифійного кода: </label>
                        <div class="form-control-static"> Відсутнє фото </div>
                        <label class="editor-label1">Завантажити фото ідентифікаційного кода: </label>
                        <div class="editor-field">
                            <input type="file" name="uploadPassportImage" />
                        </div>
                    </div>
                }
                else
                {
                    <div class="form-group row">
                        <div class="editor-label">Фото ідентифікаційного кода: </div>
                        @Html.Raw("<img style='width:250px; height:125px;' src=\"data:image/jpeg;base64,"
                                                 + Convert.ToBase64String(Model.Order.INNImages) + "\" />")
                        @Html.Hidden("PassportImages", Model.Order.PassportImages)
                        <div class="editor-label">Змінити нове фото ідентифікаційного кода: </div>
                        <div class="editor-field">
                            <input type="file" name="uploadINNImage" />
                        </div>
                    </div>
                }
            </div>

            <div class="form-group row">

                @Html.HiddenFor(x => x.Order.Id)
                @Html.HiddenFor(x => x.Order.CreationDate)
                @Html.AntiForgeryToken()
                <br>
                <div class="col-md-offset-4 col-md-8">
                    <button type="submit" class="btn btn-success">Зберегти</button>
                    <input type="button" value="Скасувати" class="btn btn-danger" onclick="location.href='@Url.Action("Index","Orders")';" />
                </div>
                </div>
            </div>
        </div>
}
