@model IEnumerable<CreditMarket.Models.Order>
@{
    /**/

    ViewBag.Title = "Заявки";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Список заявок</h2>
<a class="btn btn-primary" href="/Orders/Create" role="button">Створити заявку</a>
<br>
<br>
@if (!Model.Any())
{
    <p>We don't have any orders yet.</p>
}
else
{
    <table class="table table-bordered table-hover">
        <thead>
            <tr>
                <th>Номер заявки</th>
                <th>ПІБ клієнта</th>
                <th>Назва кредиту</th>
                <th>Сума кредиту</th>
                <th>Термін</th>
                <th>Дата подачі заявки</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var order in Model)
            {
                <tr>
                    <td>@order.Id</td>
                    <td>@Html.ActionLink(order.FullName, "Edit", "Orders", new { id = order.Id }, null)</td>
                    <td>@order.Loan.Name</td>
                    <td>@order.Amount</td>
                    <td>@order.Loan.Period</td>
                    <td>@order.CreationDate</td>
                    <td>
                        <button data-order-id="@order.Id" class="btn-link js-delete">Delete</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

@section scripts
{
    <script>
        $(document).ready(function () {
            $("#orders .js-delete").on("click", function () {
                if (confirm("Delete?")) {
                    $.ajax({
                        url: "/api/orders/" + $(this).attr("data-order-id"),
                        method: "DELETE",
                        success: function () {
                            console.log("SUCCESS");
                        }
                    })
                }
            });
        });
    </script>
}
