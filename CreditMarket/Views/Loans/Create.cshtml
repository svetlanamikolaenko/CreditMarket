@model CreditMarket.ViewModels.LoanFormViewModel
@{
	ViewBag.Title = "Створення кредиту";
}

<h2>Створення кредиту</h2>

@using (Html.BeginForm("Create", "Loans"))
{
<p class="alert alert-info">Усі поля обов'язкові.</p>
	@Html.AntiForgeryToken()
	<div class="form-group">
		<label for="Name">Назва кредиту</label>
		@Html.TextBoxFor(l => l.Name, new { @class = "form-control", autofocus = "autofocus" })
		@Html.ValidationMessageFor(l => l.Name)
	</div>
	<div class="form-group">
		<label for="Period">Термін кредиту</label>
		@Html.TextBoxFor(l => l.Period, new { @class = "form-control" })
		@Html.ValidationMessageFor(l => l.Period)
	</div>
	<div class="form-group">
		<label for="Procent">Процентна ставка</label>
		@Html.TextBoxFor(l => l.Procent, new { @class = "form-control" })
		@Html.ValidationMessageFor(l => l.Procent)
	</div>
	<button type="submit" class="btn btn-primary">Зберегти</button>
}

@section scripts
{
	@Scripts.Render("~/bundles/jqueryval")
}
